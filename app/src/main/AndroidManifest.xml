<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nozamaandroid">

    <application
        android:allowBackup="true"
        android:icon="@drawable/bag_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bag_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeView"
            android:label="@string/company_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddProduct"></activity>
        <activity android:name=".UserAccountDetails"></activity>
        <activity android:name=".ProductDetails"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".CartView"></activity>
        <activity android:name=".UserCreation"></activity>
        <activity android:name=".Shared.FileChooser"></activity>
        <activity android:name=".Shared.CameraIntent"></activity>
    </application>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />
</manifest>