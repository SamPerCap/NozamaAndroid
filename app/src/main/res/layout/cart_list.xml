<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productNameList"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="2dp" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="50dp"
            app:layout_constraintStart_toEndOf="@+id/productNameList"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/lessAmount"
            android:layout_width="15dp"
            android:textSize="@dimen/text_size_cart"
            app:layout_constraintStart_toEndOf="@+id/productPrice"
            android:layout_height="match_parent"
            android:text="@string/lessThan"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:text="0"
            android:id="@+id/amount"
            android:layout_width="30dp"
            app:layout_constraintStart_toEndOf="@+id/lessAmount"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            />
        <TextView
            android:id="@+id/increaseAmount"
            android:layout_width="15dp"
            android:textSize="@dimen/text_size_cart"
            app:layout_constraintStart_toEndOf="@+id/amount"
            android:layout_height="match_parent"
            android:text=">"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/removeItem"
            android:layout_width="50dp"
            app:layout_constraintStart_toEndOf="@+id/increaseAmount"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:textSize="@dimen/text_size_cart"
            android:text="X"
            android:textColor="#FF0000" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>