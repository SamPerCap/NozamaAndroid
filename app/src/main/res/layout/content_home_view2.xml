<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeView"
    tools:showIn="@layout/app_bar_home_view2">

    <GridView
        android:id="@+id/gridview_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginTop="25dp"
        android:background="@color/lightgray"
        android:horizontalSpacing="5dp"
        android:numColumns="2"
        android:verticalSpacing="5dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addProductButton"
        app:borderWidth="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/gridview_product"
        android:layout_alignBottom="@+id/gridview_product"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/colorPrimaryClarito"
        android:onClick="openAddProductView"
        android:src="@drawable/ic_add" />

</RelativeLayout>